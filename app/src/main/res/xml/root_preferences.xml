<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/graphics_header">

        <SwitchPreferenceCompat
            app:key="@string/glow_key"
            app:title="@string/glow_title" />

        <SeekBarPreference
            app:key="@string/snake_length_key"
            app:title="@string/snake_length_title"
            app:defaultValue="5"
            app:min="1"
            android:max="70"
            app:showSeekBarValue="true"/>

    </PreferenceCategory>

</PreferenceScreen>