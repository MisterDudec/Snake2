<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/GameFragment">

    <fragment
        android:id="@+id/GameFragment"
        android:name="com.example.snake2.ui.game.GameFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_game">

        <action
            android:id="@+id/action_GameFragment_to_GameOverFragment"
            app:destination="@id/GameOverFragment" />
        <action
            android:id="@+id/action_GameFragment_to_SettingsDialogFragment"
            app:destination="@id/SettingsDialogFragment" />

    </fragment>

    <dialog
        android:id="@+id/GameOverFragment"
        android:name="com.example.snake2.ui.gameover.GameOverFragment"
        tools:layout="@layout/fragment_game_over">

        <action
            android:id="@+id/action_GameOverFragment_to_GameFragment"
            app:destination="@id/GameFragment" />
        <action
            android:id="@+id/action_GameOverFragment_to_SettingsDialogFragment"
            app:destination="@id/SettingsDialogFragment" />
    </dialog>

    <dialog
        android:id="@+id/SettingsDialogFragment"
        android:name="com.example.snake2.ui.SettingsDialogFragment"
        tools:layout="@layout/fragment_settings_dialog">

    </dialog>


    <fragment
        android:id="@+id/SettingFragment"
        android:name="com.example.snake2.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings">

    </fragment>

</navigation>